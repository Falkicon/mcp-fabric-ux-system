{
  "name": "mcp-server-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for creating Model Context Protocol (MCP) servers with TypeScript",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts | pino-pretty",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:stdio": "cross-env MCP_TRANSPORT=stdio node dist/index.js",
    "index-docs": "tsx ./scripts/indexDocs.ts",
    "lint": "biome lint ./src ./scripts",
    "lint:fix": "biome lint --apply ./src ./scripts",
    "format": "biome format ./src ./scripts",
    "format:fix": "biome format --write ./src ./scripts"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "typescript",
    "boilerplate"
  ],
  "author": "",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@types/glob": "^8.1.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.14.0",
    "cross-env": "^7.0.3",
    "pino-pretty": "^13.0.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "vitest": "^3.1.1",
    "glob": "^11.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.9.0",
    "@types/express": "^5.0.1",
    "@xenova/transformers": "^2.17.2",
    "chromadb": "^2.2.0",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "js-yaml": "^4.1.0",
    "remark-frontmatter": "^5.0.0",
    "remark-parse": "^11.0.0",
    "remark-stringify": "^11.0.0",
    "unified": "^11.0.5",
    "zod": "^3.24.2"
  }
}
